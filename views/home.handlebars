<div class="container">
	<div class="row">
		<div id="status" class="three columns">
		</div>
		<div class="nine columns">
			<div class="row">
				<div class="one-half column">
					<div class="wrap">
						<div class="textdisp" id="score">Score: 0</div>
					</div>
				</div>
				<div class="one-half column">
					<div class="wrap">
						<div class="textdisp" id="timer">Time: 0m0s</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="one-third column">
					<div class="wrap changer">
						<i class="fa fa-step-backward fa-4x" onclick="backsong()"></i>
					</div>
				</div>
				<div class="one-third column">
					<div class="wrap">
						<div><img id="albumart" src=""></div>
					</div>
				</div>
				<div class="one-third column">
					<div class="wrap changer">
						<i class="fa fa-step-forward fa-4x" onclick="nextsong()"></i>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="wrap">
					<i id="playpauser" class="fa fa-pause-circle-o fa-5x" onclick="playpause()"></i>
				</div>
			</div>

			<div class="row">
				<div class="wrap">
					<form class="guessform">
						<input id="guess" type="text" placeholder="What's the Song?"></input>
						<input id="submitbutton" class="button" type="submit" value="Submit">
					</form>
				</div>
			</div>

			<audio id="demo" preload="auto" autoplay src=""></audio>
